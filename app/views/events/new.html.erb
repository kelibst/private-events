<div class="container">
    
    <h1 class="text-center font-weight-bolder display-5">Create an Event</h1>
    <%= render 'shared/errors', obj: @event%>
    <%= simple_form_for @event do |f| %>
    <%= f.input :description, label: 'Your description here.', error: 'description is mandatory, please specify one' %>
    <%= f.button :submit, "Create Event", class: "btn btn-success w-100" %>
    <% end %>
</div>